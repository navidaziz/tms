
<TextView
android:id="@+id/title_trainings"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Edit"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp"
android:paddingTop="60dp" />
		
						<EditText
						android:id="@+id/code"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Code"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/trainings"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Title"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/code"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/level"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Level"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/title"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/category"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Category"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/level"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/sub_category"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Sub Category"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/category"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/type"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Type"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/sub_category"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/training_for"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Training For"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/type"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/location"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Location"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/training_for"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/start_date"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Start Date"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/location"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/end_date"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="End Date"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/start_date"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/detail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Detail"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/end_date"
						android:layout_marginTop="42dp"/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Update"
android:id="@+id/btn_update_trainings"
android:background="@xml/btnselector"
android:textColor="@android:color/background_light"
/>