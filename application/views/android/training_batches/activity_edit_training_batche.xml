
<TextView
android:id="@+id/title_training_batches"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Edit"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp"
android:paddingTop="60dp" />
		
						<EditText
						android:id="@+id/training_id"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Training Id"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/training_batches"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/batch_title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Batch Title"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/training_id"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/batch_detail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Batch Detail"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/batch_title"
						android:layout_marginTop="42dp"/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Update"
android:id="@+id/btn_update_training_batches"
android:background="@xml/btnselector"
android:textColor="@android:color/background_light"
/>